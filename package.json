{
  "name": "conventional-release-setup",
  "version": "2.3.0",
  "description": "Sets up package for committing/releasing with conventional commits.",
  "author": "Mark <mark@remarkablemark.org>",
  "bin": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run test:ci && npm run clean && npm run build",
    "test": "jest -u",
    "test:ci": "CI=true jest --ci --colors --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/conventional-release-setup"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/conventional-release-setup/issues"
  },
  "keywords": [
    "conventional-release-setup",
    "conventional-commits",
    "cli"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/compat": "1.2.5",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "8.20.0",
    "@typescript-eslint/parser": "8.20.0",
    "eslint": "9.18.0",
    "eslint-plugin-prettier": "5.2.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  },
  "files": [
    "/files",
    "/lib"
  ],
  "license": "MIT"
}
