{
  "name": "conventional-release-setup",
  "version": "2.0.0",
  "description": "Sets up package for committing/releasing with conventional commits.",
  "author": "Mark <mark@remarkablemark.org>",
  "bin": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable && npm run lint && npm run test:ci && npm run clean && npm run build",
    "test": "jest -u",
    "test:ci": "CI=true jest --ci --colors --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/conventional-release-setup"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/conventional-release-setup/issues"
  },
  "keywords": [
    "conventional-release-setup",
    "conventional-commits",
    "cli"
  ],
  "devDependencies": {
    "@commitlint/cli": "18.0.0",
    "@commitlint/config-conventional": "17.8.0",
    "@types/jest": "29.5.6",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.0.2",
    "pinst": "3.0.0",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "files": [
    "/files",
    "/lib"
  ],
  "license": "MIT"
}
